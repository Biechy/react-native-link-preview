    "metro-react-native-babel-preset": "^0.61.0",
    "react": "^16.13.1",
    "react-native": "^0.63.2",
    "react-native-testing-library": "^2.1.1",
    "react-test-renderer": "^16.13.1",
    "type-coverage": "^2.9.0",
    "typescript": "^3.9.7"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "collectCoverage": true,
